{% extends 'layouts/app.twig' %}

{% block title %}
    Register
{% endblock %}

{% block content %}
    Register
    <form action="/register" method="post">
        <div>
            <input type="text" name="first_name" id="first_name" placeholder="Your name" />
        </div>
        <div>
            <input type="text" name="email" id="email" placeholder="Your email" />
        </div>
        <div>
            <input type="password" name="password" id="password" placeholder="A password" />
        </div>
        <div>
            <button type="submit">
                Register
            </button>
        </div>
    </form>
{% endblock %}
